<% @title=params[:no] %>

<hr class='top'>
<div class="row column">
<h4 style="margin: 0;" class="text-center">MORE OPPORTUNITES</h4>
</div>
<hr class ='bottom'>

<div class="row">
		<div class="large-12 columns">
<% oc=0 %>
<% oclim = 3+(6*(params[:no].to_i-2)) %>
<% @jobs.reverse.each do |message| %> 
<% if oc<oclim %>
<% oc = oc+1 %>
<% else %>
<div class="row">
<div class="large-6 columns">
<%=image_tag(message.photo.url, alt:  message.name, width:"100%")%>
</div>
<div class="large-6 columns">
<% url="opportunity/" + message.url %>
<h5><a class='OT' href=<%= url %>> <p><%= message.name %></p> </a></h5>
<p>
<span><i class="fi-torso"> <%= message.tagline %> &nbsp;&nbsp;</i></span>
<span><i class="fi-calendar"> <p class="time"><%= message.created_at.to_date %></p>  &nbsp;&nbsp;</i></span>
</p>
<p class="content"><%= message.short %></p> 
</div>
</div>
<hr>
<% end %>
<% end %>
</div>
<br>