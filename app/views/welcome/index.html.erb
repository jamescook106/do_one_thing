<div class="row">
	<div class="large-12 columns">
		<%=image_tag("Header_Placeholder.png", alt: "Header", width:"100%")%>
		<br>
		<br>
		<h4> Calling all King's Researchers! </h4>
		<ul>
			<li>Too many activities to choose from?</li>
			<li>Just #do1thing to help your professional future</li>
			<li>You’re two clicks away from a great opportunity</li>
		</ul>
	</div>
</div>

<hr class='top'>
	<div class="row column">
		<h4 style="margin: 0;" class="text-center">THIS WEEK'S FEATURED OPPORTUNITIES</h4>
	</div>
<hr class='bottom'>

<div class="row">
	<% @jobs.order([:release]).reverse.each do |message| %>
		<%if message.primary==true %>
			<div class="medium-8 columns">
				<% url="opportunity/" + message.url %>
				<div class="overlay-container">
					<%=link_to image_tag(message.photo.url(:primary), alt: message.tagline, title:message.tagline, width:"100%"),url %>
					<div class="overlay"><span><%= message.name %></span></div>
				</div>
			</div>
		<% break %>
		<% end %>
	<% end %>

	<% @jobs.order([:release]).reverse.each do |message| %>
	<% sc=0 %>
		<%if message.secondary==true and sc<2 %>
			<%sc=sc+1 %>
			<div class="medium-4 columns">
				<% url="opportunity/" + message.url %>
				<div class="overlay-container">
					<%=link_to image_tag(message.photo.url(:secondary), alt: message.tagline, title:message.tagline, width:"100%"),url %>
					<div class="overlay"><span><%= message.name %></span></div>
				</div>
			</div>
		<% end %>
	<% end %>
</div>

<hr class='top'>
	<div class="row column">
		<h4 style="margin: 0;" class="text-center">MOST POPULAR - CHOSEN BY KING'S RESEARCHERS</h4>
	</div>
<hr class='bottom'>

<div class="row small-up-3 medium-up-4 large-up-5">
	<% sarray=[] %>
	<% @jobs.order([:release]).reverse.each do |message| %>
		<% if message.release.to_date < Time.now %>
			<% if message.expiry.to_date > Time.now %>
				<% ssaray=[] %>
				<% ssaray << message.impressionist_count(:start_date=>Date.today-7.days) %>
				<% ssaray << message.photo.url(:thumb) %>
				<% ssaray << message.name %>
				<% ssaray << message.url %>
				<% ssaray << message.tagline %>
				<% sarray << ssaray %>
			<% end %>
		<% end %>
	<% end %>
	<% oc1=0 %>
	<% sarray.sort! {|x,y| x[0]<=>y[0]} %>
	<% sarray.reverse.each do |pop| %>
		<% if oc1<5 %>
			<% oc1 = oc1+1 %>
			<div class="column">
				<% url="opportunity/" + pop[3] %>
				<%=link_to image_tag(pop[1], alt:  pop[4],title: pop[4], width:'370'),url%>
			</div>
		<% end %>
	<% end %>
</div>

<hr class='top'>
	<div class="row column">
		<h4 style="margin: 0;" class="text-center">LATEST OPPORTUNITIES</h4>
	</div>
<hr class ='bottom'>

<div class="row">
	<div class="large-8 columns">
		<p>Do you have an opportunity you’d like to see featured here?  Please <a href="/contact_us">contact us</a> to find out how.</p>
    <% oc=0 %>
		<% @jobs.order([:release]).reverse.each do |message| %>
			<% if oc<2 %>
				<% if message.release.to_date < Time.now %>
					<% if message.expiry.to_date > Time.now %>
						<% oc = oc+1 %>
						<div class="row">
							<div class="large-6 columns">
								<% url="opportunity/" + message.url %>
								<%=link_to image_tag(message.photo.url, alt:  message.tagline,title:message.tagline, width:"100%"),url %>
							</div>
							<div class="large-6 columns">
								<% full_url=request.base_url+"/"+url%>
								<h5><a class='OT' href=<%= url %>> <p><%= message.name %></p> </a></h5>
								<%= social_share_button_tag(message.name, :url=>full_url) %>
								<p class="content"><%= message.short %></p>
								<p class="time"> Live until: <%= message.expiry.to_date.strftime("%d/%m/%Y") %></p>
							</div>
						</div>
						<hr>
					<% end %>
				<% end %>
			<% end %>
      <% end %>
</div>
<div class="large-4 columns" style="border-left: 1px solid #E3E5E8;">
    <a class="twitter-timeline" data-height="700" data-theme="light" href="https://twitter.com/kcldo1thing">Tweets by kcldo1thing</a> <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
</div>
<div class="large-12 columns">
  <%k1=0 %>
  <% @jobs.order([:release]).reverse.each do |message2| %>
      <% if message2.release.to_date < Time.now %>
        <% if message2.expiry.to_date > Time.now %>
        <% k1=k1+1 %>
        <% if k1>2 && k1<10%>
        <div class="row">
          <div class="large-6 columns">
            <% url="opportunity/" + message2.url %>
            <%=link_to image_tag(message2.photo.url, alt:  message2.tagline,title:message2.tagline, width:"100%"),url %>
          </div>
          <div class="large-6 columns">
            <% full_url=request.base_url+"/"+url%>
            <h5><a class='OT' href=<%= url %>> <p><%= message2.name %></p> </a></h5>
            <%= social_share_button_tag(message2.name, :url=>full_url) %>
            <p class="content"><%= message2.short %></p>
            <p class="time"> Live until: <%= message2.expiry.to_date.strftime("%d/%m/%Y") %></p>
          </div>
        </div>
        <hr>
        <% end %>
        <% end %>
      <% end %>
    <% end %>
</div>


		<% jobtot=0 %>
		<%@jobs.each do |message| %>
			<% if message.release.to_date < Time.now %>
				<% if message.expiry.to_date > Time.now %>
					<% jobtot = jobtot+1 %>
				<% end %>
			<% end %>
		<% end %>

		<% if jobtot >10 %>
			<ul class="pagination" role="navigation" aria-label="Pagination">
				<li class="disabled">Previous <span class="show-for-sr">page</span></li>
				<li class="current"><span class="show-for-sr">You're on page</span> 1</li>
				<li><a href="latest_opportunities/2" aria-label="Page 2">2</a></li>
				<li><a href="latest_opportunities/2" aria-label="Next page">Next <span class="show-for-sr">page</span></a></li>
			</ul>
		<% end %>
	</div>
</div>
